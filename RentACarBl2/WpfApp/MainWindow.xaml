<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Name="GridStart" Margin="10,0,-10,0">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible"></Setter>
                </Style>
            </Grid.Style>
            <Label Grid.Column="0" Margin="320,94,400,291">Username:</Label>
            <TextBox Name="ime"  Margin="287,133,359,260"/>
            <Label  Margin="320,164,400,219">Password:</Label>
            <PasswordBox Name="sifra" Margin="287,205,359,188" PasswordChar="*"/>
            <Button Margin="320,274,400,112" Content="Log In" Command="{Binding LogInCommand}"/>
            <Button  Margin="552,43,145,335" Content="Sign Up" Command="{Binding SignUpCommand}"/>
        </Grid>


    </Grid>
</Window>
